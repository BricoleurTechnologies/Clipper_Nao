<aura:component implements="lightning:availableForFlowScreens,force:hasRecordId,force:lightningQuickActionWithoutHeader">
    <aura:html tag="style">
        .slds-modal {
            visibility: hidden;
            display: none;
        }
        .slds-backdrop{
            display: none;
        }        
    </aura:html>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
</aura:component>